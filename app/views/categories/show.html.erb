            <td class="w30" width="30"></td>
        </tr>
    </tbody></table>
    
    
</td>
                </tr>
                
                

    <% if @category.projects.where("updated_at > ?", 1.day.ago).count > 0 %>
        <tr id="gallery-content-row"><td class="w640" width="640" bgcolor="#ffffff">
        <table class="w640" width="640" cellpadding="0" cellspacing="0" border="0">
            <tbody><tr>
                <td class="w30" width="30"></td>
                <td class="w580" width="580">
                    <repeater>
                    </repeater><p style="color:#3498DB; font-weight: bold; font-size: 28px; margin:0 0 20px 0;"><%= @category.name %></p>
                        <% @category.projects.where("updated_at > ?", 1.day.ago).order('stargazers desc').each_with_index do |project, index| %>
                        <layout label="Text only">
                            <table class="w580" width="580" cellpadding="0" cellspacing="0" border="0">
                                <tbody><tr>
                                    <td class="w580" width="580">
                                        <p align="left" style="font-size: 18px; line-height:24px; color: #79c0f0; font-weight:bold; margin-top:0px; margin-bottom:10px; font-family: HelveticaNeue, sans-serif;"><singleline label="Title">

                                            <%= link_to (index + 1).to_s + '. ' + project.name, project.url, :style => "color: #79c0f0; text-decoration: none;" %>

                                         <span style="color:#c2c2c2">by</span> 

                                         <%= link_to project.created_by, "http://www.github.com/" + project.created_by, :style => "color: #79c0f0; text-decoration: none;" %>

                                        </singleline></p>
                                        <div align="left" style="font-size: 13px; line-height: 18px; color: #858585; margin-top: 0px; margin-bottom: 18px; font-family: HelveticaNeue, sans-serif;">
                                            <multiline label="Description">
                                                                                                <%= project.description %><br>
                                                <b><%= project.stargazers %> Stargazers &bull; <a href="<%= project.url %>" style="color: #3498DB; font-weight:bold; text-decoration:none;">View Repository</a></b>
                                            </multiline>
                                        </div>
                                    </td>
                                </tr>
                                <tr><td class="w580" width="580" height="10"></td></tr>
                            </tbody></table>
                        </layout>
                        <% end %>
                </td>

                <td class="w30" width="30"></td>
            </tr>
        </tbody></table>
        </td></tr>

    <% end %>



                <tr><td class="w640" width="640" height="15" bgcolor="#fcfcfc"></td></tr>
                
